<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.screening.activity.ShowActivity">
    <!--<include layout="@layout/title_item"></include>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/title_shape"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="@dimen/dp_15"

            />

        <Button
            android:id="@+id/btn_left"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_bg"
            android:padding="0.5dp"
            android:text="@string/patient_return"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="@dimen/dp_15"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/iv_screen"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/scanning"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <com.screening.ui.WifiLoadingAnim
            android:id="@+id/wifiLoadingAnim"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:layout_toRightOf="@+id/btn_left"
            />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="@dimen/scrolWidth"
        android:scrollbarThumbVertical="@color/viewfinder_mask"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/scan_patient_phone"></include>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
